generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              Int           @id @default(autoincrement())
  account         String        @unique
  password        String
  email           String        @unique
  riot_account_id String
  created_at      DateTime      @default(now())
  updated_at      DateTime      @updatedAt
  RoomUser        RoomUser[]
  BanPickRooms    BanPickRoom[] @relation("RoomOwner")
}

model BanPickRoom {
  id         Int        @id @default(autoincrement())
  room_type  String
  room_name  String     @unique
  room_owner Int
  owner      User       @relation("RoomOwner", fields: [room_owner], references: [id])
  users      RoomUser[]
  created_at DateTime   @default(now())
}

model RoomUser {
  id      Int         @id @default(autoincrement())
  room_id Int
  user_id Int
  team    String?
  room    BanPickRoom @relation(fields: [room_id], references: [id])
  user    User        @relation(fields: [user_id], references: [id])

  @@unique([room_id, user_id])
}
